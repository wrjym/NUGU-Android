<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yongmac.VletterApp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.yongmac.VletterApp.MyApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/splash"
        android:label="Voice Letter"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateAlwaysHidden"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name="com.yongmac.VletterApp.Activity.BoardActivity"></activity>
        <activity android:name="com.yongmac.VletterApp.Activity.AdressActivity" />
        <activity android:name="com.yongmac.VletterApp.Activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yongmac.VletterApp.Activity.LetterActivity" />
        <activity android:name="com.yongmac.VletterApp.Activity.MainActivity" />
    </application>

</manifest>